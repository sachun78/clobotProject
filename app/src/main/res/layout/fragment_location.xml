<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.location">


    <com.google.android.material.tabs.TabLayout
        app:tabTextAppearance="@style/tab_text"
        android:id="@+id/exhibits_tab"
        android:background="@drawable/exhibits_tab"
        android:layout_width="904px"
        android:layout_height="112px"
        app:tabIndicator="@drawable/tab_selected"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="48px"
        app:tabIndicatorGravity="center"
        app:tabIndicatorHeight="96px"
        app:tabIndicatorColor="@color/mid_grey"
        app:tabTextColor="@color/text_darkwhite">

        <com.google.android.material.tabs.TabItem
            android:layout_width="439px"
            android:layout_height="match_parent" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="439px"
            android:layout_height="match_parent" />

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/location_viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/exhibits_tab" />


</androidx.constraintlayout.widget.ConstraintLayout>