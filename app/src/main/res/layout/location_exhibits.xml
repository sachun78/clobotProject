<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:fontFamily="@font/min_sans_bold"
        android:textColor="@color/text_darkwhite"
        android:id="@+id/location_exhibits_x1"
        android:layout_width="1000px"
        android:layout_height="wrap_content"
        android:layout_marginTop="48px"
        android:text="@string/location_exhibits_x1"
        android:textSize="48px"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="996px"
        android:layout_height="700px"
        android:layout_marginTop="230px"
        android:src="@drawable/map_ungjin2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/location_exhibits_x1" />

</androidx.constraintlayout.widget.ConstraintLayout>