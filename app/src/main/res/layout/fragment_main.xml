<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:text="gnb_b1"
        android:id="@+id/gnb_b1"
        android:layout_width="848px"
        android:layout_height="107px"
        android:layout_marginLeft="60px"
        android:background="@drawable/qi_message"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </Button>

    <TextView
        android:textSize="64px"
        android:id="@+id/main_x1"
        android:layout_width="619px"
        android:layout_height="160px"
        android:layout_marginLeft="62px"
        android:layout_marginTop="148px"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="main_t1"/>

    <LinearLayout
        android:id="@+id/main_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="320px"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gnb_b1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_menu1"
            android:layout_width="320px"
            android:layout_height="664px"
            android:background="@drawable/main_vertical_button">
            <ImageView
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_marginTop="177px"
                android:src="@drawable/gonju_info_picto"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <Button
                android:textSize="48px"
                android:id="@+id/main_b1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@color/transparency"
                android:text="main_b1"
                android:layout_marginTop="376px"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_menu2"
            android:layout_width="320px"
            android:layout_height="664px"
            android:layout_marginLeft="24px"
            android:layout_marginRight="24px"
            android:background="@drawable/main_vertical_button">
            <ImageView
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_marginTop="177px"
                android:src="@drawable/gonju_exhibition_picto"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <Button
                android:textSize="48px"
                android:id="@+id/main_b2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@color/transparency"
                android:text="main_b2"
                android:layout_marginTop="376px"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_menu3"
            android:layout_width="320px"
            android:layout_height="664px"
            android:background="@drawable/main_vertical_button">
            <ImageView
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_marginTop="177px"
                android:src="@drawable/gonju_escort_picto"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <Button
                android:textSize="48px"
                android:id="@+id/main_b3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@color/transparency"
                android:text="main_b3"
                android:layout_marginTop="376px"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_menu4"
        android:layout_width="788px"
        android:layout_height="210px"
        android:layout_marginTop="80px"
        android:background="@drawable/main_horizontal_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_grid">
        <ImageView
            android:layout_width="160px"
            android:layout_height="160px"
            android:layout_marginTop="26px"
            android:layout_marginLeft="102px"
            android:src="@drawable/gonju_explain_picto"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <Button
            android:textSize="48px"
            android:id="@+id/main_b4"
            android:layout_width="wrap_content"
            android:layout_height="60px"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/transparency"
            android:text="main_b4"
            android:layout_marginTop="76px"
            android:layout_marginLeft="289px"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>