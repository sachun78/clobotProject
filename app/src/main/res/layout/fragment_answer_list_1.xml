<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.template.answer_list_1">

    <TextView
        android:id="@+id/answer_list1_t1"
        android:layout_width="980px"
        android:layout_height="96px"
        android:layout_gravity="center_horizontal"
        android:text="STT" />

    <TextView
        android:id="@+id/answer_list1_t2"
        android:layout_width="match_parent"
        android:layout_height="230px"
        android:layout_marginTop="26px"
        android:lineSpacingMultiplier="1.2"
        android:maxLength="100"
        android:text="로봇 speech(100자 제한)"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_marginTop="80px">

        <Button
            android:layout_width="120px"
            android:layout_height="120px" />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="65px"
            android:layout_height="58px"
            android:text="1/2" />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <Button
            android:layout_width="120px"
            android:layout_height="120px" />
    </LinearLayout>

    <GridView
        android:layout_width="1001px"
        android:layout_height="1010px"
        android:numColumns="1"/>
</LinearLayout>