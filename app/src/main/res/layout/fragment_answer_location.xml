<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.template.answer_location">

    <TextView
        android:fontFamily="@font/min_sans_black"
        android:textSize="40px"
        android:textColor="@color/text_darkwhite"
        android:id="@+id/answer_location_c1"
        android:layout_width="960px"
        android:layout_height="wrap_content"
        android:layout_marginTop="85px"
        android:gravity="center"
        android:text="answer_location_c1(chatDB제공)"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/test_docent_b1"
        android:layout_width="470px"
        android:layout_height="128px"
        android:layout_marginLeft="60px"
        android:layout_marginTop="60px"
        android:background="@drawable/location_btn1"
        android:fontFamily="@font/min_sans_black"
        android:gravity="center"
        android:text="@string/answer_location_b1"
        android:textColor="@color/text_darkwhite"
        android:textSize="36px"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/answer_location_c1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/test_docent_b3"
        android:textColor="@color/text_darkwhite"
        android:layout_width="470px"
        android:layout_height="128px"
        android:layout_marginLeft="60px"
        android:layout_marginTop="60px"
        android:layout_marginRight="60px"
        android:background="@drawable/location_btn2"
        android:fontFamily="@font/min_sans_black"
        android:gravity="center"
        android:text="@string/answer_location_b3"
        android:textSize="36px"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/answer_location_c1" />

    <ImageSwitcher
        android:id="@+id/answer_location_c3"
        android:layout_width="740px"
        android:layout_height="512px"
        android:layout_marginTop="48px"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/test_docent_b1" />

    <Button
        android:id="@+id/answer_loc_back"
        android:layout_width="120px"
        android:layout_height="96px"
        android:background="@drawable/left_btn"
        app:layout_constraintBottom_toBottomOf="@id/answer_location_c3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/answer_location_c3" />

    <Button
        android:id="@+id/answer_loc_next"
        android:layout_width="120px"
        android:layout_height="96px"
        android:background="@drawable/right_btn"
        app:layout_constraintBottom_toBottomOf="@id/answer_location_c3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/answer_location_c3" />

    <Button
        android:id="@+id/answer_location_b7"
        android:layout_width="120px"
        android:layout_height="120px"
        android:background="@drawable/big_icon"
        app:layout_constraintBottom_toBottomOf="@id/answer_location_c3"
        app:layout_constraintLeft_toRightOf="@id/answer_location_c3" />

    <Button
        android:id="@+id/answer_location_b6"
        android:layout_width="120px"
        android:layout_height="120px"
        android:layout_marginRight="16px"
        android:background="@drawable/glb_icon"
        app:layout_constraintBottom_toBottomOf="@id/answer_location_c3"
        app:layout_constraintRight_toLeftOf="@id/answer_location_b7" />

    <TextView
        android:id="@+id/answer_location_c4"
        android:layout_width="960px"
        android:layout_height="756px"
        android:layout_marginTop="48px"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarFadeDuration="0"
        android:scrollbarSize="8px"
        android:scrollbarStyle="outsideInset"
        android:scrollbarThumbVertical="@color/text_darkwhite"
        android:scrollbarTrackVertical="@color/transparency"
        android:scrollbars="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/answer_location_c3" />
</androidx.constraintlayout.widget.ConstraintLayout>