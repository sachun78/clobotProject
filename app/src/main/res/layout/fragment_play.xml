<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lge.support.second.application.main.view.play">

    <GridLayout
        android:layout_width="670px"
        android:layout_height="1230px"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_gravity="center">
        <ImageView
            android:layout_marginRight="15px"
            android:layout_marginBottom="30px"
            android:id="@+id/play_i1"
            android:layout_width="320px"
            android:layout_height="600px"
            android:src="@drawable/play_menucategory1"/>
        <ImageView
            android:layout_marginLeft="15px"
            android:id="@+id/play_i2"
            android:layout_width="320px"
            android:layout_height="600px"
            android:src="@drawable/play_menucategory2"/>
        <ImageView
            android:layout_marginBottom="30px"
            android:layout_marginRight="15px"
            android:id="@+id/play_i3"
            android:layout_width="320px"
            android:layout_height="600px"
            android:src="@drawable/play_menucategory3"/>
        <ImageView
            android:layout_marginLeft="15px"
            android:id="@+id/play_i4"
            android:layout_width="320px"
            android:layout_height="600px"
            android:src="@drawable/play_menucategory4"/>
    </GridLayout>

</FrameLayout>