<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="1710px"
    android:background="@color/black"
    tools:context="com.lge.support.second.application.main.view.chat">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="128px"
                android:layout_marginLeft="40px"
                android:layout_marginTop="60px"
                android:text="@string/chat_t1"
                android:textSize="30dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/chat_i1"
                android:background="@drawable/finger"
                android:layout_width="128px"
                android:layout_height="128px"
                android:layout_marginTop="50px"
                android:layout_marginRight="20px"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="128px"
            android:layout_gravity="center"
            android:layout_marginTop="60px"
            android:gravity="center"
            android:text="@string/chat_t2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48px"
            android:layout_gravity="center"
            android:layout_marginTop="56px"
            android:text="@string/chat_t3" />

        <GridView
            android:numColumns="2"
            android:id="@+id/chat_gridView"
            android:layout_width="1000px"
            android:layout_height="880px"
            android:layout_gravity="center|bottom"
            android:layout_marginTop="59px" />
    </LinearLayout>

</FrameLayout>